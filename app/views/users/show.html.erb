<% provide(:title, @user.username) %>
<h1><%= @user.username %></h1>
<h2>Use this form to edit your account information</h2>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages' %>
      

      <%= f.label :username %>:
      <br />
      <%= f.text_field :username %>
      <br />
      <br />
      
      <%= f.label :email %>
      <br />
      <%= f.text_field :email %>
      <br />
      <br />
      
      <%= f.label :password %>:
      <br />
      <%= f.password_field :password %>
      <br />
      <br />
      <%= f.label :password_confirmation, "Confirmation" %>:
      <br />
      <%= f.password_field :password_confirmation %>
      <br />
      <br />
      <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>


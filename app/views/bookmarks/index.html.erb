<h1>Welcome to Linkshare</h1>
<h2>Your site for saving and sharing browswer bookmarks</h2>
<h3>All bookmarks shared:</h3>

<table>
  <tr>
    <th>Url</th>
    <th>Name</th>
    <th>Date Saved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookmarks.each do |bookmark| %>
  <tr>
    <td><%= bookmark.url %></td>
    <td><%= bookmark.name %></td>
    <td><%= bookmark.dateSaved %></td>
    <td><%= link_to 'Show', bookmark %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a new bookmark', new_bookmark_path %>


